<Page
    x:Class="FitnessApp.Wpf.Views.AdminPages.ChallengesSetupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:vm="clr-namespace:FitnessApp.Wpf.ViewModels.AdminPages"
    xmlns:models="clr-namespace:FitnessApp.Models;assembly=FitnessApp.Models"
    d:DataContext="{d:DesignInstance vm:ChallengesSetupViewModel}"
    mc:Ignorable="d">


    <materialDesign:DialogHost x:Name="DialogBox">

        <!--  DialogBox Content  -->
        <materialDesign:DialogHost.DialogContent>

            <Grid>

                <!--  Add A Challenge DialogBox  -->
                <Grid
                    x:Name="AddChallengeDialogBox"
                    Width="500"
                    Visibility="Collapsed">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="15" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="15" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="15" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="15" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="15" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="15" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="15" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="15" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="15" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        FontFamily="{StaticResource ProductSans}"
                        FontSize="18"
                        Text="Add a New Challenge" />

                    <!--  Challenge Name  -->
                    <Grid Grid.Row="3" Grid.Column="1">
                        <materialDesign:PackIcon Margin="0,20,0,0" Kind="RenameBox" />
                        <TextBox
                            x:Name="ChallengeNameTextBox"
                            Margin="25,0,0,0"
                            materialDesign:HintAssist.Hint="Challenge Name"
                            FontFamily="{StaticResource Roboto}"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    </Grid>

                    <!--  Challenge Description  -->
                    <Grid Grid.Row="5" Grid.Column="1">
                        <materialDesign:PackIcon Margin="0,20,0,0" Kind="FormatLineStyle" />
                        <TextBox
                            x:Name="ChallengeDescriptionTextBox"
                            Margin="25,0,0,0"
                            materialDesign:HintAssist.Hint="Challenge Description"
                            TextWrapping="Wrap"
                            MaxLength="114"
                            AcceptsReturn="True"
                            SpellCheck.IsEnabled="True"
                            VerticalScrollBarVisibility="Auto" />
                    </Grid>

                    <!--  Challenge DueDate  -->
                    <Grid Grid.Row="7" Grid.Column="1">
                        <materialDesign:PackIcon Margin="0,20,0,0" Kind="Calendar" />
                        <DatePicker
                            x:Name="ChallengeDueDatePicker"
                            Margin="25,0,0,0"
                            materialDesign:HintAssist.Hint="Due Date"
                            DisplayDateStart="{x:Static sys:DateTime.Today}"
                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />
                    </Grid>

                    <!--  Challenge Type  -->
                    <Grid Grid.Row="9" Grid.Column="1">
                        <materialDesign:PackIcon Margin="0,20,0,0" Kind="Weights" />
                        <ComboBox
                            x:Name="WorkoutTypeComboBox"
                            Margin="25,5,0,0"
                            HorizontalAlignment="Stretch"
                            materialDesign:HintAssist.Hint="Workout Type"
                            materialDesign:HintAssist.HintOpacity="0.25"
                            IsEditable="True" />
                    </Grid>

                    <!--  Challenge Target  -->
                    <Grid Grid.Row="11" Grid.Column="1">
                        <materialDesign:PackIcon Margin="0,20,0,0" Kind="TargetArrow" />
                        <TextBox
                            x:Name="ChallengeTargetMinutesTextBox"
                            Margin="25,0,0,0"
                            materialDesign:HintAssist.Hint="Target in Minuites"
                            FontFamily="{StaticResource Roboto}"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                        <!--  PreviewTextInput="DecimalNumbersOnlyFieldValidation"  -->
                    </Grid>

                    <!--  Challenge Reward  -->
                    <Grid Grid.Row="13" Grid.Column="1">
                        <materialDesign:PackIcon Margin="0,20,0,0" Kind="TrophyOutline" />
                        <TextBox
                            x:Name="ChallengeRewardTextBox"
                            Margin="25,0,0,0"
                            materialDesign:HintAssist.Hint="Reward"
                            FontFamily="{StaticResource Roboto}"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                    </Grid>

                    <StackPanel
                        Grid.Row="15"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">

                        <Button
                            x:Name="AddChallengePhotoButton"
                            Margin="0,15,0,0"
                            FontFamily="{StaticResource ProductSans}"
                            FontSize="14"
                            Foreground="{DynamicResource PrimaryHueMidBrush}"
                            Style="{StaticResource MaterialDesignFlatButton}">
                            <!--  Click="AddChallengePhotoButton_Click"  -->
                            Add Challenge Photo
                        </Button>

                        <Button
                            x:Name="DialogBoxAddButton"
                            Margin="0,15,15,0"
                            FontFamily="{StaticResource ProductSans}"
                            FontSize="14"
                            Foreground="{DynamicResource PrimaryHueMidBrush}"
                            Style="{StaticResource MaterialDesignFlatButton}">
                            <!--  Click="DialogBoxAddButton_Click"  -->
                            Add
                        </Button>

                        <Button
                            x:Name="DialogBoxCancelButton"
                            Margin="0,15,0,0"
                            FontFamily="{StaticResource ProductSans}"
                            FontSize="14"
                            Foreground="{DynamicResource PrimaryHueMidBrush}"
                            Style="{StaticResource MaterialDesignFlatButton}">
                            <!--  Click="DialogBoxCancelButton_Click"  -->
                            Cancel
                        </Button>

                    </StackPanel>

                </Grid>

            </Grid>

        </materialDesign:DialogHost.DialogContent>

        <Grid>
            <Grid HorizontalAlignment="Center">

                <!--  All Challenges ListBox  -->
                <ListBox
                    x:Name="AllChallengesListBox"
                    Width="1016"
                    Padding="-8,0"
                    HorizontalAlignment="Left"
                    materialDesign:RippleAssist.IsDisabled="True"
                    ItemsSource="{Binding AllChallengeModels}"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Hidden"
                    Foreground="Transparent">

                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <!--  Challenge Item Template  -->
                    <ListBox.ItemTemplate>

                        <DataTemplate DataType="{x:Type models:Challenge}">

                            <materialDesign:Card
                                Width="500"
                                Height="330"
                                Background="{StaticResource MaterialDesignBackground}">
                                <Grid>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="140" />
                                        <RowDefinition Height="15" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="10" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="15" />
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="15" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Challenge Image  -->
                                    <Image
                                        Grid.Row="0"
                                        Grid.ColumnSpan="3"
                                        VerticalAlignment="Center"
                                        Source="{Binding Photo.Source}"
                                        Stretch="UniformToFill" />

                                    <!--  Join Button  -->
                                    <Button
                                        x:Name="DeleteChallengeButton"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Width="50"
                                        Height="50"
                                        Margin="0,0,16,-20"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Style="{StaticResource MaterialDesignFloatingActionButton}"
                                        ToolTip="Remove Challenge Permanently">
                                        <!--  Click="DeleteChallengeButton_Click"  -->
                                        <materialDesign:PackIcon Kind="DeleteSweep" />
                                    </Button>

                                    <!--  Challenge Name  -->
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        FontFamily="{StaticResource ProductSans}"
                                        FontWeight="Bold"
                                        FontSize="18"
                                        Foreground="Black"
                                        Text="{Binding Name}" />

                                    <!--  Challenge Description  -->
                                    <TextBlock
                                        Grid.Row="4"
                                        Grid.Column="1"
                                        FontFamily="{StaticResource Roboto}"
                                        FontSize="14"
                                        TextWrapping="Wrap"
                                        Foreground="Black"
                                        Text="{Binding Description}" />

                                    <!--  Challenge Due Date  -->
                                    <Grid Grid.Row="6" Grid.Column="1">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="10" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon
                                            Grid.Column="0"
                                            Kind="Calendar"
                                            Foreground="Black" />

                                        <TextBlock
                                            Grid.Column="2"
                                            FontFamily="{StaticResource ProductSans}"
                                            FontSize="15"
                                            Foreground="Black"
                                            Text="{Binding DueDate}" />

                                    </Grid>

                                    <!--  Challenge Target  -->
                                    <Grid Grid.Row="8" Grid.Column="1">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="10" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon
                                            Grid.Column="0"
                                            Kind="TargetArrow"
                                            Foreground="Black" />

                                        <TextBlock
                                            Grid.Column="2"
                                            FontFamily="{StaticResource ProductSans}"
                                            FontSize="15"
                                            Foreground="Black"
                                            Text="{Binding StyledTargetMinutes}" />

                                    </Grid>

                                    <!--  Challenge Reward  -->
                                    <Grid Grid.Row="10" Grid.Column="1">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto" />
                                            <ColumnDefinition Width="10" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon
                                            Grid.Column="0"
                                            Kind="TrophyOutline"
                                            Foreground="Black" />

                                        <TextBlock
                                            Grid.Column="2"
                                            FontFamily="{StaticResource ProductSans}"
                                            FontSize="15"
                                            Foreground="Black"
                                            Text="{Binding Reward}" />

                                    </Grid>

                                </Grid>

                            </materialDesign:Card>

                        </DataTemplate>

                    </ListBox.ItemTemplate>

                </ListBox>



            </Grid>

            <!--  Floating Button  -->
            <Button
                x:Name="AddChallengeButton"
                Margin="25"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Style="{StaticResource MaterialDesignFloatingActionButton}"
                ToolTip="Add a Challenge">
                <!--  Click="ChallengeDialogBoxAddButton_Click"  -->

                <materialDesign:PackIcon Kind="Add" />

            </Button>
        </Grid>

    </materialDesign:DialogHost>

</Page>
